#!/bin/bash

PARAMS="$@"
if [[ $# = 1 ]] && [[ "$1" =~ "s" ]];
then
  PARAMS="$PARAMS -b 0.0.0.0"
fi

CMD="cd /src && USER=discourse RUBY_GLOBAL_METHOD_CACHE_SIZE=131072 LD_PRELOAD=/usr/lib/libjemalloc.so RAILS_ENV=${RAILS_ENV:=development} DISCOURSE_DEV_HOSTS=discourse.std4453.com bin/unicorn $PARAMS"
docker exec -it -u discourse:discourse -d discourse_dev /bin/bash -c "$CMD"
